<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<fx:root title="Resume Preview" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11"
         xmlns:fx="http://javafx.com/fxml/1" minWidth="800" minHeight="800">
    <scene>
        <Scene stylesheets="@DarkTheme.css">
            <VBox styleClass="popUpBox">
                <Label fx:id="previewHeader" styleClass="popUpHeader" text="Resume" textAlignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
                <TextArea fx:id="previewText" styleClass="popUpText" layoutX="10" layoutY="30" wrapText="true"
                          editable="false" VBox.vgrow="ALWAYS">
                </TextArea>
            </VBox>
        </Scene>
    </scene>
</fx:root>
